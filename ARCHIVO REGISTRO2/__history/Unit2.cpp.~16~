	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm2::FormCreate(TObject *Sender)
{
   pf=new fstream("Alumnos.dat",ios::in|ios::out);
   if (pf-> fail()) {
	   delete(pf);
	   pf = new fstream("Alumnos.dat",ios::out);
   }
   pf->close();
   delete(pf);
}
//---------------------------------------------------------------------------
